<span class="text-xs" id="score"></span>

<script>
  import { SCORE_API_ENDPOINT } from "astro:env/client";

  const scoreElement = document.querySelector("#score");

  fetch(SCORE_API_ENDPOINT)
    .then((res) => res.text())
    .then((scoreValue) => {
      if (scoreElement) {
        scoreElement.innerHTML = `⭐ Puntuación: ${scoreValue}`;
      }
    });
</script>
